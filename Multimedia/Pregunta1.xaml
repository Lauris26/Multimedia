                <Button x:Name="opcion1" Content="Hello" Height="117" Width="1353" FontSize="48" Margin="0,239,0,0" VerticalAlignment="Top" Click="opcion1_Click" HorizontalAlignment="Center" Foreground="Black" FocusVisualPrimaryBrush="#FF070707">
                    <Button.Background>
                        <AcrylicBrush TintColor="#CCFEFAFA"/>
                    </Button.Background>
                </Button>
                <Button x:Name="opcion1Fallo" Content="Hello" Height="117" Width="1353" FontSize="48" Margin="0,239,0,0" VerticalAlignment="Top" HorizontalAlignment="Center" Visibility="Collapsed" Foreground="Black" FocusVisualPrimaryBrush="#FF070707">
                    <Button.Background>
                        <AcrylicBrush TintColor="#CCFE0B0B"/>
                    </Button.Background>
                </Button>
                <Button x:Name="opcion1Correcta" Content="Hello" Height="117" Width="1353" FontSize="48" Margin="0,239,0,0" VerticalAlignment="Top" Click="opcion1_Click" HorizontalAlignment="Center" Foreground="Black" FocusVisualPrimaryBrush="#FF070707" Visibility="Collapsed">
                    <Button.Background>
                        <AcrylicBrush TintColor="#CC3BED20"/>
                    </Button.Background>
                </Button>
                <Button x:Name="opcion2" Content="Hi" Height="117" Margin="0,381,0,0" VerticalAlignment="Top" Width="1353" FontSize="48" HorizontalAlignment="Center" Click="opcion2_Click" Foreground="Black" FocusVisualPrimaryBrush="#FF070707">

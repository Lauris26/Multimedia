                        <AcrylicBrush TintColor="#CCFE0B0B"/>
                    </Button.Background>
                </Button>
                <Button x:Name="reset" Content="Reiniciar" Height="90" Margin="572,834,0,0" VerticalAlignment="Top" Width="391" FontSize="48" Click="reset_Click" Foreground="Black" FocusVisualPrimaryBrush="#FF070707"/>
            </Grid>

        </Canvas>

    </Grid>
</Page>

                        <AcrylicBrush TintColor="#CCFEFAFA"/>
                    </Button.Background>
                </Button>
                <Button x:Name="opcion2Fallo" Content="Hi" Height="117" Margin="0,381,0,0" VerticalAlignment="Top" Width="1353" FontSize="48" HorizontalAlignment="Center" Visibility="Collapsed" Foreground="Black" FocusVisualPrimaryBrush="#FF070707">
                    <Button.Background>
                        <AcrylicBrush TintColor="#CCFE0B0B"/>
                    </Button.Background>
                </Button>
                <Button x:Name="opcion2Correcta" Content="Hi" Height="117" Margin="0,381,0,0" VerticalAlignment="Top" Width="1353" FontSize="48" HorizontalAlignment="Center" Visibility="Collapsed" Foreground="Black" FocusVisualPrimaryBrush="#FF070707">
                    <Button.Background>
                        <AcrylicBrush TintColor="#CC3BED20"/>
                    </Button.Background>
                </Button>
                <Button x:Name="opcion3" Content="Hellow" Height="116" Margin="0,516,0,0" VerticalAlignment="Top" Width="1353" HorizontalAlignment="Center" FontSize="48" Click="opcion3_Click" Foreground="Black" FocusVisualPrimaryBrush="#FF070707">
                    <Button.Background>
                        <AcrylicBrush TintColor="#CCFEFAFA"/>
                    </Button.Background>
                </Button>
                <Button x:Name="opcion3Fallo" Content="Hellow" Height="116" Margin="0,516,0,0" VerticalAlignment="Top" Width="1353" FontSize="48" HorizontalAlignment="Center" Visibility="Collapsed" Foreground="Black" FocusVisualPrimaryBrush="#FF070707">
